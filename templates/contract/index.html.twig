{% extends 'base.html.twig' %}

{% block title %}Contract index{% endblock %}

{% block body %}
    <h1>Contract index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Provider</th>
                <th>Description</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>PricePerKwh</th>
                <th>AdditionalCosts</th>
                <th>InitialReading</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.provider }}</td>
                <td>{{ contract.description }}</td>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ contract.pricePerKwh }}</td>
                <td>{{ contract.additionalCosts }}</td>
                <td>{{ contract.initialReading }}</td>
                <td>
                    <a href="{{ path('app_contract_show', {'id': contract.id}) }}">show</a>
                    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contract_new') }}">Create new</a>
{% endblock %}
