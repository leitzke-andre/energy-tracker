{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Provider</th>
                <td>{{ contract.provider }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ contract.description }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PricePerKwh</th>
                <td>{{ contract.pricePerKwh }}</td>
            </tr>
            <tr>
                <th>AdditionalCosts</th>
                <td>{{ contract.additionalCosts }}</td>
            </tr>
            <tr>
                <th>InitialReading</th>
                <td>{{ contract.initialReading }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contract_index') }}">back to list</a>

    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
{% endblock %}
